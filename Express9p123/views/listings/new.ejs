
<% layout("layouts/boilerplate")  %>
<br><br>
<div class="row-8 col-10">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation">

      <div class="mb-3">Title
      <input name="listing[title]"
      placeholder="enter title"
       type="text"
       class="form-control" />
       <div class="valid-feedback">Title looks good !</div>
     </div>
      <br /><br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="enter description"
       class="form-control"></textarea>
      </div>
      <br /><br />
      <div class="mb-3">
        <label for="image" class="form-label">image</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
       class="form-control" />
      </div>
      <br /><br />
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
      <input name="listing[price]" placeholder="enter price" type="number"
       class="form-control" required/>
      </div>
      <br /><br />
      <div class="mb-3 c">
          <label for="country" class="form-label">Country</label>
      
      <input  name="listing[country]" 
      placeholder="enter country" 
      type="text" 
       class="form-control"/>
        <div class="valid-feedback">country should be valid !</div>
     </div>
           
     </div>
      <br /><br />
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
       class="form-control" required/>
      </div><br /><br />
      <button class="btn btn-warning">Add</button>
    </form>
  </body>
</div>

